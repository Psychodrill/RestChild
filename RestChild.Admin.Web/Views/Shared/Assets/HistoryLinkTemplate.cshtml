<script type="text/html" id="HistoryModalDialogTemplate">
	<div class="modal fade" id="HistoryModalDialog">
		<div class="modal-dialog big-dialog ">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">История</h4>
				</div>
				<div class="modal-body modal-body-autosize" style="max-height: 600px">
					<div class="text-center">Получение данных <img class="text-center" width="20" height="20" src="/Content/images/spinner.gif" /> </div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
				</div>
			</div>
		</div>
	</div>
</script>

<script type="text/x-dot-template" id="HistoryModalTableTemplate">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Событие</th>
				<th>Комментарий</th>
				<th>Пользователь</th>
				<th>Дата изменения</th>
			</tr>
		</thead>
		<tbody>
			{{~ it:val:index}}
			<tr>
				<td>{{=val.eventCode}}</td>
				<td>{{=val.commentary}}</td>
				<td>{{=val.account?val.account:'-'}}</td>
				<td>{{=val.dateChange}}</td>
			</tr>

			{{~}}
		</tbody>
	</table>

</script>
