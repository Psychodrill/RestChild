@using System.Collections
@using RestChild.Comon
@using RestChild.Comon.Enumeration
@using RestChild.Domain
@using RestChild.Web.App_Code
@using RestChild.Web.Controllers
@model RestChild.Web.Models.RequestViewModel

@{ var typeOfRest = Model.Data.TypeOfRest ?? new TypeOfRest();}
<fieldset class="bs-callout bs-callout-info request-block @(typeOfRest.ParentId == (long) TypeOfRestEnum.ChildRest ? string.Empty : "hidden")">
    <h3 id="TypeOfCamp" class="anchor bs-callout-info">Тип лагеря</h3>
    <div class="row form-group">
        <label class="col-md-3 control-label">Приоритетный<span class="requared">*</span></label>
        <div class="col-md-9">
            @Html.DropDownListFor(r => r.Data.TypeOfCampId, SelectListHelper.Create(Model.TypesOfCamp, h => new SelectListItem() { Value = h.Id.ToString(), Text = h.Name }), new {@class = "form-control select2 typeOfCamp"})
        </div>
    </div>
    <div class="row form-group">
        <label class="col-md-3 control-label">Дополнительный<span class="requared">*</span></label>
        <div class="col-md-9">
            @Html.DropDownListFor(r => r.Data.TypeOfCampAddonId, SelectListHelper.Create(Model.TypesOfCamp, h => new SelectListItem() { Value = h.Id.ToString(), Text = h.Name }), new {@class = "form-control select2 typeOfCampAddon"})
        </div>
    </div>
</fieldset>
