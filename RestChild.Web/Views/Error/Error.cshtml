@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Ошибка";
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css-general")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand title-white" href="@Url.Action("Index", "Home")"></a>
			</div>
		</div>
	</div>
	<div class="container body-content">
		<h1 class="text-danger">Ошибка.</h1>
		<p>Пожалуйста, попробуйте выполнить операцию снова или обратитесь в службу технической поддержки.</p>
		<p><a href="@(string.IsNullOrEmpty(Request["aspxerrorpath"])?"/":Request["aspxerrorpath"])">Обновить страницу</a></p>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
</body>
</html>

