@model RestChild.Comon.ForceChangePasswordModelBase

@{
	ViewBag.Title = "Смена пароля";
}

<h3>Вам необходимо сменить пароль</h3>
<div class="row login">
	<div class="col-md-12">
		<section id="loginForm">
			@using (Html.BeginForm("ForceChangePassword", "Account", null, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
			{
				@Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.FirstTimeAuth)
            @Html.HiddenFor(m => m.ReturnUrl)
				<hr />
            if (Html.ValidationSummary(true) != null)
            {
               {<text>@Html.Raw(Html.ValidationSummary(true).ToString())</text>}
            }
				<div class="form-group">
					@Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label"})
               <div class="col-md-10">
                  @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", autocomplete = "off" })
                  @Html.ValidationMessageFor(m => m.NewPassword)
               </div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.NewPasswordRpt, new {@class = "col-md-2 control-label"})
					<div class="col-md-10">
						@Html.PasswordFor(m => m.NewPasswordRpt, new {@class = "form-control"})
						@Html.ValidationMessageFor(m => m.NewPasswordRpt)
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Сменить" class="btn btn-default" />
					</div>
				</div>
			}
		</section>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/global")
	@Scripts.Render("~/bundles/jqueryval")
}
